@model MediaApp.Models.Delete.PlaylistDeleteViewModel

<div id="delete-container" class="container">
    <div class="row">
    <div class="col-12">
        <h1>Are you sure you want to delete the @Model.MediaType playlist @Model.Title?</h1>
    </div>  
    </div>
    <div class=row>
        <div class="col-6" align="right">           
            <button class="btn btn-dark"  onclick="GoToPlaylistIndex(@Model.MediaType)">Cancel</button>
        </div>
        <div class="col-6" align="left">
            <form asp-controller="Playlist" asp-action="ConfirmDelete" method="post" asp-route-id="@Model.Id" asp-route-type="@Model.MediaType">
                <button class="btn btn-info">Yes</button>
            </form>
        </div>
    </div>      
</div>

<script>
    function GoToPlaylistIndex(type) {
        window.location.href = '/playlist/index?mediatype=' + type;
    }
</script>
<style>
    h1 {
        font-size: 50px;
        margin-bottom: 5%;
        margin-top: 5%;
    }

    #delete-container {
        height: 90vh;      
    }
    #delete-container button{
        font-size: 20px;
    }
</style>
