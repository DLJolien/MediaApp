@model IEnumerable<MediaListViewModel>

<a asp-controller="Film" asp-action="Create">Add new film</a>
<br />
@{if (Model.Count() == 0)
    {
        <br />
        <strong>There are currently no films listed.</strong>
    }
    else
    {
<div class="container">
    <div class="row">
        @foreach (var film in Model)
        {
            <div class="col">
                <a asp-controller="film" asp-action="detail" asp-route-id="@film.Id"><img src="@film.PhotoUrl" /> </a>              
                <p>@film.Title - @film.ReleaseDate.Year</p>
            </div>

        }
    </div>
    <div class="row">
        @foreach (var film in Model)
        {
        <div class="col">
            <a asp-controller="film" asp-action="detail" asp-route-id="@film.Id"><img src="@film.PhotoUrl" /> </a>
            <p>@film.Title - @film.ReleaseDate.Year</p>
        </div>

        }
    </div>
</div>

    }
}



<style>
    div .col {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    img {
        width: 240px;
        height: 280px;
    }

    .col {
        border: solid 1px;
    }
</style>
